{
	"manifest_version": 2,
	"name": "Rate My Cornell Professors",
	"short_name": "CornellRMP",
	"description": "Puts RateMyProfessors ratings directly into Cornell Class Roster.",
	"version": "1.0",
	"icons": {
		"16": "./img/icon16.png", 
		"48": "./img/icon48.png", 
		"128": "./img/icon128.png" 
	},
	"page_action": {
		"default_icon": {
			"19": "./img/icon19.png", 
			"38": "./img/icon38.png" 
		}
	},
	"permissions": [
		"http://www.ratemyprofessors.com/*"
	],
	"content_scripts": [
		{
			"matches": ["https://classes.cornell.edu/browse/roster/SP21/subject/*"],
			"js": ["./public/bundle.js"],
			"all_frames": true
		}
	],
	"background": {
		"scripts": ["./public/background.js"],
		"persistent": false
    },
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}